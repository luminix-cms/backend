{
    "name": "luminix/backend",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Luminix\\Backend\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "Bruno Polo",
            "email": "brunopolo@poli.ufrj.br"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0",
        "illuminate/database": "^10.0",
        "staudenmeir/eloquent-eager-limit": "^1.8",
        "haydenpierce/class-finder": "^0.5.3",
        "arandu/reducible": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~10.0",
        "orchestra/testbench": "^8.0",
        "nunomaduro/collision": "^7.8"
    },
    "scripts": {
        "test": "@php vendor/bin/testbench package:test",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ],
        "artisan": "@php vendor/bin/testbench"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Luminix\\Backend\\BackendServiceProvider"
            ]
        }
    }
}
